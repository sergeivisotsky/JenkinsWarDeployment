         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Jenkins War Deployment</display-name>

    <servlet>
        <servlet-name>jenkins-war-deployment</servlet-name>
        <servlet-class>org.sergei.jenkins.showcase.controller.Welcome</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>jenkins-war-deployment</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>